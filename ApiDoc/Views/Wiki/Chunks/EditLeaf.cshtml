@model ApiDoc.Models.Leaf

@using (Html.BeginForm("EditLeaf", "Wiki", new { path = ViewBag.Structure.Path }))
{
    @Html.HiddenFor(m => m.Id)
    // TODO: replace with some sort of dropdown for other nodes if we want to have a move-functionality
    @Html.HiddenFor(m => m.ParentId)
    @Html.EditorFor(m => m)
    <input type="submit" value="Update" />
}